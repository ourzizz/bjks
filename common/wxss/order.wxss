/* pages/orders/orders.wxss */
@import '/weui.wxss';

page {
  height: 100%;
  background: rgb(247, 244, 244);
}

.page, .page__bd {
  height: 100%;
}

.page__bd {
  padding-bottom: 0;
}

.weui-tab__content {
  padding-top: 60px;
  text-align: center;
}

.weui-btn {
  margin-top: 5rpx;
}

.order_box {
  position: relative;
  background-color: #fff;
  font-size: 32rpx;
  margin: 10rpx;
  padding: 5rpx;
  border-radius: 5px;
  box-shadow: 5px 5px 5px #888;
  /* border-bottom: 5rpx #999 solid */
}

.edit_button {
  width: 30rpx;
  font-size: 25rpx;
  /*position: relative;*//*left:80rpx;*/
}

/*goods_list*/

.cart_box {
  height: 100%;
}

.head_editor {
  position: fixed;
  top: 0;
}

.goods_info_box {
  padding: 0;
  margin: 0;
}

.cart_item {
  position: relative;
  border-bottom: 1rpx solid #d9d9d9;
}

/*商品的图片、名称、价格*/

.goods_box {
  display: block;
}

.goods_img {
  margin-right: 5px;
  vertical-align: middle;
  width: 50px;
  height: 50px;
}

.price {
  display: inline;
  font-size: 28rpx;
  color: red;
}

.goods_name {
  width: 100%;
  /*justify-content: center;*//*text-align: center;*/
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.button_box {
  display: flex;
  margin: 10rpx 0 10rpx 0;
}

.order_button {
  width: 40%;
  height: 70rpx;
  font-size: 30rpx;
  line-height: 2.5;
}

.user_words {
  background: #42c97f;
  padding: 15rpx;
  color: white;
  font-size: 28rpx;
  border-radius: 14rpx;
  margin: 5rpx 5rpx 0 5rpx;
  /* height: 200rpx; */
  word-wrap:normal;
}
