<view class="page">
  <view class="page__bd page__bd_spacing">
    <view class="weui-flex">
      <view class="weui-flex__item">
        <view class="placeholder">正在进行中</view>
      </view>
      <view class="weui-flex__item">
        <view class="placeholder">即将开始</view>
      </view>
    </view>
  </view>

  <view class="page__bd">
    <view class="weui-tab">
      <view class="weui-navbar">
        <block wx:for="{{eventtime.impend}}" wx:key="*this">
          <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
            <view class="weui-navbar__title">{{item.event}}</view>
          </view>
        </block>
        <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
      </view>

      <view class="weui-tab__panel">
        <block wx:for="{{eventtime.impend}}" wx:for-index="idx">
          <block hidden="{{activeIndex != idx}}">
            <block wx:for="{{item.filelist}}">
              <view class="weui-tab__content">{{item.filetitle}}---{{idx}}</view>
            </block>
          </block>
        </block>
      </view>
    </view>
  </view>
</view>