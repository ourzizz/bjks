/* pages/paysuccess/paysuccess.wxss */
@import '/weui.wxss'
page{
    height: 100%;
    background: rgb(247, 244, 244);
}
.page,
button{
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}
.button-sp-area{
  margin: 0 auto;
  width: 60%;
}
.mini-btn{
  margin-right: 10rpx;
}

.foot {
    position: fixed;
    bottom: 0;
    color: #11cd6e;
    border-top: solid 1rpx #e5e5e5;
    width: 100%;
}

.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.weui-tab__content{
    padding-top: 60px;
    text-align: center;
}
.weui-btn{
margin-top:5rpx;
}
.order_box{
    position:relative;
    background-color: #FFFFFF;
    font-size: 32rpx;
    margin: 10rpx;
    padding: 5rpx;
    border-radius: 5px;
    border-bottom: 5rpx #999 solid
}

.edit_button{
    width:30rpx;
    font-size: 25rpx;
    /*position: relative;*/
    /*left:80rpx;*/
    
}
/*goods_list*/
.cart_box {
    height: 100%
}
.head_editor{
position:fixed;
top:0;
}
.goods_info_box {
    padding: 0; margin: 0;
}

.cart_item {
    position: relative;
    border-bottom: 1rpx solid #d9d9d9;
}

/*商品的图片、名称、价格*/
.goods_box {
    display: block
}

.goods_img {
    margin-right: 5px;
    vertical-align: middle;
    width: 50px;
    height: 50px;
}

.price {
display:inline;
font-size: 28rpx;
color: red;
}

.goods_name{
    width:100%;
    justify-content: center;
    text-align: center;
    font-size: 30rpx;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap; 
}
.spring{
    height:20px;
}

.picker{
  padding: 19rpx 26rpx;
  background-color: #FFFFFF;
}

.page-body{
    width:100%;
}
