@import '/weui.wxss';
/* 要把确定和取消按钮放到页面底部，否则用户在输入法没有退出前，点击保存会导致输入信息丢失 */
page{
    height: 100%;
    background: rgb(247, 244, 244);
}

.textarea {
  font-size: 28rpx;
  margin: 20rpx 0 0 0;
  width: 100%;
  height: 100px;
}
.weui-cell{
    margin: 0 0 0 20rpx;
    font-size: 35rpx;
}
.weui-cell__bd{
    width: 30%
}
.weui-cell__gt{
    width: 70%;
word-wrap:break-word;
}

.picker{
    padding: 13px;
    background-color: #FFFFFF;
}
.weui-cell{
    padding: 0;
}
.input_box{
  height: 150rpx;
  border-style: solid;
  border-width: 1rpx;
}
.address_box{
    background-color: #FFFFFF;
    font-size: 32rpx;
    margin: 20rpx;
    border-radius: 5px;
    box-shadow: 5px 5px 5px #888888;
    /* border-bottom: 5rpx #999 solid */
}
.info_box{
    padding: 10rpx 0 10rpx 20rpx;
    border-bottom: 1rpx rgb(214, 18, 18) dashed ;/* item中的虚线样式 */
}
.opera_box{
    margin:0 10rpx 0 20rpx;
    /* height: 200rpx; */
}

.button_box{
    position: relative;
    left:80rpx;
    font-size: 25rpx;
}

.foot{/* fixed导致脱离文档流，按钮居中 */ 
    position: fixed;
    margin:0px auto;
    bottom: 20rpx;
    left: 0;
    right:0;
    width: 85%;
}
