<view class="page">
<view  wx:if="{{step === 1}}">
<!--地址列表s-->
<view style='padding:1rpx'></view>
<view class="address_list" style="margin:20rpx 0 0 0;">
<radio-group class="group" bindchange="select_default_address_back_to_prepage">
      <view wx:for="{{address_list}}" wx:key="{{address_list.address_id}}" wx:for-index="idx">
        <view class='address_box'>
            <view class="info_box">
              <view style="display:inline">{{item.name}} </view>
              <view style="display:inline">{{item.telphone}} </view>
              <view style="color:black" class="price">*{{item.province}}{{item.city}}{{item.county}}{{item.detail}}</view>
            </view>
            <view class="opera_box">
                <radio id="{{item.address_id}}" value="{{idx}}" checked="{{item.checked}}"></radio>
                <label class="label-2-text" for="{{item.name}}">设为默认地址</label>
                <view class="edit_button" style="display:inline;" >
                  <button data-idx="{{idx}}" bindtap="edit_address" style="display:inline;margin:10rpx;font-size:40rpx">编辑</button>
                  <button data-idx="{{idx}}" bindtap="delete_address" style="display:inline;font-size:40rpx">删除</button>
                </view>
            </view>
        </view> <!-- class='address_info'-->
</view > <!--wx:for="{{address_list}}"---->
</radio-group>

<view style='padding:60rpx 0 60rpx 0'></view>
<!-- <view style='padding:40rpx'></view> -->

<view class="foot" hover-class="none" hover-stop-propagation="false">
<button  bindtap="create_address"> 新增地址</button>
</view>
</view >
</view>

<!-- 新增和修改地址页面 -->
<view  wx:if="{{step === 2}}">

<view class="page-section">

        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd">收货人:</view>
                <view class="weui-cell__gt">
                <input class="weui-input" bindchange="input_name"  placeholder="{{new_address !==null ?new_address.name:'姓名'}}"/>
                </view>
            </view>
        </view>


        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd">联系方式:</view>
                <view class="weui-cell__gt">
                <input class="weui-input" bindchange="input_telphone" placeholder="{{new_address !==null ?new_address.telphone:'电话'}}"/>
                </view>
            </view>
        </view>

        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
  <view class="weui-cell__bd">选择省市区:</view>
  <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
    <view class="weui-cell__gt"> {{region[0]}}，{{region[1]}}，{{region[2]}} </view>
  </picker>
  </view>
  </view>

        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd">详细地址:</view>
                <view class="weui-cell__gt">
                <input class="weui-input" bindchange="input_detail" placeholder="{{new_address !==null ?new_address.detail:'详细地址'}}"/>
                </view>
            </view>
        </view>

  <view class="foot">
      <button style="position:relative;top:16rpx;" bindtap="submit"> 确定</button>
  </view>
</view>
</view>
  </view>

<!-- 新增和修改页面 -->