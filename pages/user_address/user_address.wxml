<view class="section">
<view  wx:if="{{step === 1}}">
<view class="address_list">
  <!--地址列表s-->
  <scroll-view style="height:980rpx; color:black;" >
    <checkbox-group style="position:absolute" bindchange="checkboxChange">
      <view wx:for="{{address_list}}" wx:key="{{address_list.address_id}}" wx:for-index="idx">
        <view class="cart_item">
            <label class="weui-cell weui-cells_after-title" style='float:left;margin:10px 0px 0 5px'>
              <view class="weui-cell__hd">
                <checkbox value="{{ item.address_id }}" checked="{{item.checked}}" />
              </view>
            </label>

        <view class='goods_info_box weui-cell weui-cell_access' hover-class="weui-cell_active" style="padding: 15rpx; margin: 0;border:0px">
              <view class="goods_name" style='font-size:25rpx'>{{item.name}} </view>
              <view style="display:inline" class="price">{{item.telphone}} </view>
              <view style="color:black" class="price">*{{item.province}}{{item.city}}{{item.county}}</view>
              <view style="color:black" class="price">{{item.detail}}</view>
        </view> <!-- class='goods_info_box'-->

        </view ><!--class="cart_item"---->
      </view > <!--wx:for="{{address_list}}"---->
    </checkbox-group>
  </scroll-view>
<view style='padding:40rpx'></view>
</view>
<button style="position:relative;top:16rpx;" bindtap="next_step"> 新增地址</button>
</view>

<!-- 订单结算页面如下 -->
<view  wx:if="{{step === 2}}">

<view class="page-section">

    <view class="weui-cells__title">姓名</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input class="weui-input"  placeholder="将会获取焦点"/>
      </view>
    </view>
  </view>

    <view class="weui-cells__title">电话</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input"> <input class="weui-input"  placeholder="将会获取焦点"/> </view>
    </view>

    <view class="weui-cells__title">详细地址</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input"> <input class="weui-input"  placeholder="将会获取焦点"/> </view>
    </view>

  <view class="section__title">省市区选择器</view>
  <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
    <view class="picker">
      收货地址：{{region[0]}}，{{region[1]}}，{{region[2]}}
    </view>
  </picker>
  <view class="foot">
      <button style="position:relative;top:16rpx;" bindtap="pre_step"> 确定</button>
  </view>
</view>
</view>

<!-- 订单结算 -->