<!--pages/writeMsg/writeMsg.wxml-->
<view class="page">
    <view>{{class_name}} </view>
    <view class="weui" >
      <view class="weui-uploader">
          <view class="weui-uploader__files" style="position:static">
              <view class="weui-uploader__file" >
                <image mode="aspectFit" class="weui-uploader__img" src="{{kaoshengInfo.photoUrl!=='null' ? kaoshengInfo.photoUrl : '/pages/user/user-unlogin.png'}}" data-id="{{idx}}" data-src="{{image}}" bindtap="previewImage"></image>
              </view>
          </view>
          <view class="weui-uploader__input-box">
            <view class="weui-uploader__input" bindtap="chooseImage"></view>
          </view>
      </view>
    </view>
    <view class="weui-cells weui-cells_after-title">
        <view class="" style="margin:0 0 0 10px;">
            <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell">
                   <view class="weui-cell__bd"> 姓名: </view>
                   <input  class="weui-cell__rg" value="{{kaoshengInfo.name}}" bindchange="input_name"  placeholder="姓名"/>
                </view>
            </view>

            <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell">
                   <view class="weui-cell__bd"> 身份证号: </view>
                   <input  class="weui-cell__rg" value="{{kaoshengInfo.sfzid}}" bindchange="input_sfzid"  placeholder="身份证号码"/>
                </view>
            </view>

            <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell">
                   <view class="weui-cell__bd"> 电话: </view>
                   <input  class="weui-cell__rg" value="{{kaoshengInfo.telphone}}" bindchange="input_telphone"  placeholder="联系电话"/>
                </view>
            </view>

            <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell">
                   <view class="weui-cell__bd"> 毕业学校: </view>
                   <input  class="weui-cell__rg" value="{{kaoshengInfo.school}}" bindchange="input_school"  placeholder="学校名称"/>
                </view>
            </view>

            <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell">
                   <view class="weui-cell__bd"> 学历: </view>
                   <input  class="weui-cell__rg" value="{{kaoshengInfo.education}}" bindchange="input_education"  placeholder="学历"/>
                </view>
            </view>

            <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell">
                   <view class="weui-cell__bd"> 学位: </view>
                   <input  class="weui-cell__rg" value="{{kaoshengInfo.degree}}" bindchange="input_degree"  placeholder="学位"/>
                </view>
            </view>

            <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell">
                   <view class="weui-cell__bd"> 专业: </view>
                   <input  class="weui-cell__rg" value="{{kaoshengInfo.major}}" bindchange="input_major"  placeholder="与毕业证必须一致"/>
                </view>
            </view>
        </view>
    </view>

 <checkbox-group bindchange="checkboxChange">
  <scroll-view style="height:50%; color:black; background-color: lightblue;" scroll-y="true">
    <view wx:if="{{tree_list != 'NULL'}}">
      <view wx:for="{{tree_list}}"  bindtap="set_idx" data-idx="{{idx}}" wx:for-index="idx">
        <view hidden="{{!item.show_self}}">
          <view class="nav_2_text" style="font-size:30rpx;positon:absolute;display:inline-block">
            <view wx:for="{{[1,2,3,4,5,6]}}" wx:for-item="i" wx:key="{{i}}" style="display:inline-block">
              <view wx:if="{{ i < item.layer + 1}}" style="padding-left:25rpx">
              </view>
            </view>
            <view style="display:inline" bindtap="operate_tree" data-idx="{{idx}}">
              <view wx:if="{{item.cptr !== '0' && item.show_sons==false}}" style="display:inline-block">
                +
              </view>
              <view wx:elif="{{item.cptr !== '0' && item.show_sons==true}}" style="display:inline-block">
                ~
              </view>
              <view wx:else style="display:inline-block">
                :.
              </view>
                {{item.description}}

                <view  style="float:right;postion:absolute;right:0" hidden="{{item.cptr !== '0'}}">
                    <checkbox bindchange="checkboxChange" data-idx="{{idx}}" value="{{ item.code }}" checked="{{item.checked}}" />
                </view>
            </view>
          </view>
        </view>
      </view>
    </view>
    <!--wx:if="{{nav_2 != 'NULL'---->
  </scroll-view>
</checkbox-group>

  <view class="foot" >
    <view  style="margin:0px auto;right:0;left:0;"> 
        <button style="backgroud:#d9d9d9;margin:10rpx;display:inline-block;width:42%" bindtap="submit"> 保存</button>
        <button style="backgroud:#d9d9d9;margin:10rpx;display:inline-block;width:42%;float:right" bindtap="cancle"> 确认报名</button>
    </view>
  </view>

</view>
